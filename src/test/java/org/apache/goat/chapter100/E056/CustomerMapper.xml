<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.apache.goat.chapter100.E056.CustomerMapper">


  <select id="getTest" resultType="org.apache.goat.common.Customer">
    select * from customers where 1=1
    <if test="id!=null">
      and id = #{id}
    </if>
  </select>




</mapper>
