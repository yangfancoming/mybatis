<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.apache.goat.chapter100.E038.DepartmentMapper">


  <!-- collection：分段查询 -->
  <resultMap type="org.apache.goat.common.Department" id="MyDeptStep">

    <id property="id" column="id" />
    <id property="departmentName" column="dept_name" />



    <!-- 扩展：多列的值传递过去：  将多列的值封装map传递
      column="{key1=column1,key2=column2}"
      fetchType="lazy"：表示使用延迟加载
              - lazy：延迟
              - eager：立即
   -->
    <collection
      column="{deptId=id,lastName=dept_name}"
      select="org.apache.goat.chapter100.E038.EmployeeMapper.getEmpsByDeptId"
      fetchType="eager"
      property="emps">
    </collection>

  </resultMap>


  <select id="getDeptByIdStep" resultMap="MyDeptStep">
    select id,dept_name from tbl_dept where id=#{id}
  </select>



</mapper>
