<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.apache.goat.chapter100.E054.EmployeeMapper">


  <!--  &amp; 为 and/&&  的转义字符  -->
  <select id="getEmpsByConditionIf" resultType="org.apache.goat.common.Employee2">
    select * from tbl_employee
    <where>
      <if test="id!=null"> id=#{id} </if>
      <if test="lastName!=null and lastName!=''">  and last_name like #{lastName}  </if>
      <if test="email!=null and email.trim()!=''"> and email=#{email} </if>
      <if test="gender==0 or gender==1"> and gender=#{gender} </if>
    </where>

  </select>


</mapper>
